<html lang="en">
  <head>
    <!-- {{>head}} -->
    <%- include("partials/head") %>
  </head>
  <body class="light">
    <div class="container">
      <div class="signin">
        <form action="/login" method="POST">
          <h1>Sign In</h1>
          <% if(message.length > 0) { %>
          <span class="error-message"><%= message %></span>
          <% } %>

          <div class="box">
            <div class="input-control">
              <i class="bx bx-envelope"></i>
              <input
                type="text"
                placeholder="example@gmail.com *"
                name="email"
                autofocus
                required
              />
            </div>
            <div class="input-control">
              <i class="bx bx-lock-alt"></i>
              <input
                type="password"
                placeholder="Password *"
                name="password"
                required
              />
            </div>

            <button class="btnSignIn">Sign In</button>

            <div class="lower">
              <span>Don't have an account?</span>
              <button class="btnRegister">Create</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
