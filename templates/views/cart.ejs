<html lang="en">
  <head>
    <!-- {{>head}} -->
    <%- include("partials/head") %>
  </head>
  <body class="light">
    <%- include("partials/header") %>
    <!-- {{>header}} -->
    <h1 style="text-align: center; margin-top: 1.5rem">Cart</h1>

    <section class="cart">
      <% for(let p of prods) {%>
      <div class="box">
        <form action="/delete-product" method="post">
          <input type="hidden" name="id" value="<%=p.id%>" />
          <button class="x-icon-for-cart">x</button>
        </form>

        <div class="top">
          <img src="<%= p.imgURL%>" alt="" />
        </div>
        <div class="bottom">
          <h3><%= p.title%></h3>
          <h4><%= p.price%></h4>
          <h4><%= p.quantity%></h4>
          <p><%= p.description%></p>
          <button type="submit">Checkout</button>
          <button type="submit">Edit</button>
        </div>
      </div>
      <% } %>
    </section>

    <%- include("partials/footer") %>
    <script src="../index.js" src="jquery-3.6.4.min.js"></script>
  </body>
</html>
