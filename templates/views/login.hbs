  <body class="light">

    <div class="container">
      <div class="signin">
        <form action="/login" method="POST">
          <h1>Sign In</h1>

          <div class="box">
            <div class="input-control">
              <i class="bx bx-envelope"></i>
              <input type="text" placeholder="example@gmail.com" name="email" />
            </div>
            <div class="input-control">
              <i class="bx bx-lock-alt"></i>
              <input type="password" placeholder="Password" name="password" />
            </div>

            <button class="btnSignIn">Sign In</button>

            <div class="lower">
              <span>Don't have an account?</span>
              <button class="btnRegister">Create</button>
            </div>
            <!-- <p class="x-button">X</p>                 -->
          </div>
        </form>
      </div>
    </div>

    <script src="../index.js" src="jquery-3.6.4.min.js"></script>
