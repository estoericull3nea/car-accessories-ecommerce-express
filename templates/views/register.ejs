<html lang="en">
  <head>
    <%- include("partials/head") %>
    <!-- {{>head}} -->
  </head>
  <body class="light">
    <div class="container">
      <div class="register">
        <form action="/register" method="POST">
          <h1>Register</h1>

          <div class="box">
            <div class="input-control">
              <i class="bx bx-user-circle"></i>
              <input type="text" placeholder="Given Name, First Name MI *" name="fullName" autofocus required/>
            </div>

            <div class="input-control">
              <i class="bx bx-user-plus"></i>
              <input type="text" placeholder="Username *" name="username" required/>
            </div>

            <div class="input-control">
              <i class="bx bx-envelope"></i>
              <input
                type="email"
                placeholder="test@gmail.com *"
                name="email"
                required
              />
            </div>
            <div class="input-control">
              <i class="bx bx-lock-alt"></i>
              <input class="pass" type="password" placeholder="Password *" name="password" required/>
            </div>

            <div class="input-control">
              <i class="bx bx-lock"></i>
              <input
                type="password"
                placeholder="Confirm Password *"
                name="confirmPassword"
                required
              />
            </div>

            <button class="btnSignIn">Register</button>

            <div class="lower">
              <span>Have an account?</span>
              <button class="btnToLogin">Log In</button>
            </div>
            <!-- <p class="x-button">X</p>                 -->
          </div>
        </form>
      </div>
    </div>

    <script src="../index.js" src="jquery-3.6.4.min.js"></script>
    <!-- {{!
    <script src="../index.js"></script>
    }} -->
  </body>
</html>
