<html lang="en">
  <head>
    <%- include("partials/head") %>
    <!-- {{>head}} -->
  </head>
  <body class="light">
    <div class="container">
      <div class="register">
        <form action="/register" method="POST">
          <h1>Register</h1>

          <% if(message.length > 0) { %>
          <p class="error-message"><%= message %></p>
          <% } %>

          <div class="box">
            <div class="input-control">
              <i class="bx bx-user-plus"></i>
              <input
                type="text"
                placeholder="Username *"
                name="username"
                required
              />
            </div>

            <div class="input-control">
              <i class="bx bx-envelope"></i>
              <input
                type="email"
                placeholder="test@gmail.com *"
                name="email"
                required
              />
            </div>
            <div class="input-control">
              <i class="bx bx-lock-alt"></i>
              <input
                class="pass"
                type="password"
                placeholder="Password *"
                name="password"
                required
              />
            </div>

            <div class="input-control">
              <i class="bx bx-lock"></i>
              <input
                type="password"
                placeholder="Confirm Password *"
                name="confirmPassword"
                required
              />
            </div>

            <button class="btnSignIn">Register</button>

            <div class="lower">
              <span>Have an account?</span>
              <button class="btnToLogin">Log In</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
